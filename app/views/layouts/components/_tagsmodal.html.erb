<!-- Button trigger modal -->
<button class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
 + Add interests
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">


  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

  <div class="modal-dialog full-size-modal" role="document">
    <div class="modal-content">
      <div class="modal-header border-0 pb-0">
        <h5 class="modal-title modal-title-big text-white font-weight-bold" id="exampleModalLabel">Interests</h5>
        <button type="button" class="close white-cross" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="bg-rover-purple">
        <div style="height: 7px; margin: 0 16px;" class="bg-white"></div>
      </div>
      <div class="modal-body">
        <div class="form-group">

          <!-- <input type="hidden" name="user[interest_ids][]" value=""> -->

          <div class="interests-choices" >

            <% @groups.each do |category, interests| %>
              <h2 class="text-white"><%= category  %></h2>
              <div>
              <% interests.each do |interest| %>
                <div class="category-tag <%= current_user.interest_ids.include?(interest.id) ? 'active-tag' : '' %>">
                  <div>
                    <span><i class="fa fa-plus" id="plus"></i><%= interest.title %></span>
                    <input type="checkbox" class="d-none" value="<%= interest.id %>" name="user[interest_ids][]" id="post_category_ids_<%= interest.id %>" <%= current_user.interest_ids.include?(interest.id) ? "checked" : "" %>>
                  </div>
                </div>
              <% end %>
              </div>
            <% end %>


          </div>
        </div>
      </div>

      <div class="modal-footer">
        <div class="form-actions btn btn-primary-xs m-auto">
          <%= f.button :submit, "Update", class: "text" %>
        </div>
      </div>
    </div>
  </div>

  <% end %>
</div>
