<nav class="navbar flex-grow-0 align-items-center" style="background-color: white; box-shadow: 0 2px 2px -2px rgba(0,0,0,.2);">
  <%= link_to "#" do %>
    <p class="logo">
      <%= image_tag "Logo-Fake.png", alt: "", size: "60", class: "d-inline-block pt-3" %>
    </p>
  <% end %>
  <% if user_signed_in? %>
    <%= link_to "#" do %>
      <img class="avatar-bordered" alt="avatar-bordered" src="https://images.unsplash.com/photo-1438761681033-6461ffad8d80?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1500&q=80" />
