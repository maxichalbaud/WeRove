<nav class="navbar flex-grow-0 align-items-center" style="background-color: white; box-shadow: 0 2px 2px -2px rgba(0,0,0,.2); height:70px;">
  <%= link_to root_path, style:"text-decoration: none;" do %>
    <p class="logo pt-2 my-auto" style="font-family: 'Minute'">
      wR
    </p>
  <% end %>
  <% if user_signed_in? %>
    <span class="d-flex align-items-center justify-content-end">
      <%= link_to "Log out", logout_path, class: "log-in" %>
      <%= link_to edit_user_registration_path do %>
        <img class=" avatar-1" alt="avatar-bordered" src="https://images.unsplash.com/photo-1438761681033-6461ffad8d80?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1500&q=80" />
      <% end %>
    </span>
  <% elsif user_signed_in? && current_page?(edit_user_registration_path)%>
    <%= link_to "#" do %>
      <i class="fas fa-comments-alt"></i>
    <% end %>
  <% else %>
    <span class="d-flex align-items-center justify-content-end">
      <%= link_to "Log in", new_user_session_path, class: "log-in" %>
      <%= link_to "Become a Rover", new_user_registration_path, class: "sign-up" %>
    </span>
  <% end %>
</nav>
