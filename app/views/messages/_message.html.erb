<div class="message <%= current_user.id == message.messager_id ? "right" : "" %>">
  <div class="media w-50">
    <div class="media-body ml-3">
      <div style="border-radius: 8px;" class="bg-light py-3 px-3 mb-2 <%= current_user.id == message.messager_id ? "bg-primary" : "" %>">
        <div class="text-small mb-0 <%= current_user.id == message.messager_id ? "text-white" : "text-muted" %>"><%= message.content %></div>
      </div>
      <p class="small text-muted"><%= message.created_at.strftime("%l:%M %p  |  %b %e") %></p>
    </div>
  </div>
</div>
