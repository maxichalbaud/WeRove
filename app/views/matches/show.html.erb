
<% country = IsoCountryCodes.search_by_name(@matched_user.city.scan(/\,(\W\w*\W\w*|\W\w*)\b/)[-1][0].strip)[0].alpha2 %>
<% if @match.local.id == current_user.id %>
<% user = @match.tourist %>
  <% if user.city? %>
  <% country = IsoCountryCodes.search_by_name(@geocode.first.country).first.alpha2 %>
  <% end %>
<% else %>
  <% user = @match.local %>
  <% if user.city? %>
  <% country = IsoCountryCodes.search_by_name(@geocode.first.country).first.alpha2 %>
    <% end %>
<% end %>


<div class="aboutcontainer mx-3">
  <div class="header">
    <div class="container mx-0 px-0">
      <div class="title mt-2">
      <h1 class="pr-2"><%= @matched_user.first_name %></h1>
      <img src="https://www.countryflags.io/<%= country %>/shiny/32.png" class="mt-1" id="flag">
      </div>
      <div class="location">
      <i class="fas fa-map-marker-alt fa-xs pr-1"></i><p>Local in <strong><%= @geocode.first.city %></strong></p>
      </div>
    </div>
    <% if @matched_user.photo.attached? %>
    <%= cl_image_tag @matched_user.photo.key, id: "avatar", class: "avatar-bordered my-2" %>
    <% else %>
    <img src="" alt="" class="avatar-bordered my-2" id="avatar">
    <% end %>
  </div>
<p style="padding-top: 8px;"><%= @matched_user.biography %></p>
</div>


<ul class="nav nav-tabs mx-3" id="myTab" role="tablist">
  <li class="nav-item">
    <a class="nav-link active" id="about-tab" data-toggle="tab" href="#about" role="tab" aria-controls="about" aria-selected="true">About me</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" id="recommendations-tab" data-toggle="tab" href="#recommendations" role="tab" aria-controls="recommendations" aria-selected="false">Top Recommendations</a>
  </li>
</ul>
<div class="tab-content" id="myTabContent">
  <div class="tab-pane fade show active" id="about" role="tabpanel" aria-labelledby="about-tab">

    <%= render 'aboutme', user: @matched_user %>

    # <%= render 'aboutme', {user: user, match: @match} %>

  </div>
  <div class="tab-pane fade" id="recommendations" role="tabpanel" aria-labelledby="recommendations-tab">
    <%= render 'toprecommendations', user: @matched_user %>
  </div>
</div>

<%= render "chat" %>

<div class="floating-chat">
    <%= link_to root_path do %><i class="fa fa-comments" aria-hidden="true"></i> <% end %>
</div>
