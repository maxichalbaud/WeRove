<%= link_to match_path(match) do %>
  <% if match.tourist == current_user %>
      <%= cl_image_tag match.local.photo.key, class: 'avatar-3', style:"#{match.tourist_seen == true && current_user.messages.where(read: nil, match_id: match.id).empty? ? "" : "border: #5D6CF3 3px solid"}" %>
  <% else %>
      <%= cl_image_tag match.tourist.photo.key, class: 'avatar-3', style:"#{match.local_seen == true && current_user.messages.where(read: nil, match_id: match.id).empty? ? "" : "border-color: #5D6CF3 3px solid"}" %>
    <% end %>
<% end %>
