<%= link_to match_path(match) do %>
  <% if match.tourist == current_user %>
    <% if match.local.photo.attached? %>
      <%= cl_image_tag match.local.photo.key, class: 'avatar-3', style:"#{match.tourist_seen == true && current_user.messages.where(read: nil, match_id: match.id).empty? ? "" : "border-color: red"}" %>
    <% else %>
      <img class="avatar-3" alt="avatar-bordered" src="https://images.unsplash.com/photo-1438761681033-6461ffad8d80?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1500&q=80", <%= style="#{match.tourist_seen == true && current_user.messages.where(read: nil, match_id: match.id).empty? ? "" : "border-color: red"}" %> />
    <% end %>
  <% else %>
    <% if match.tourist.photo.attached? %>
      <%= cl_image_tag match.tourist.photo.key, class: 'avatar-3', style:"#{match.local_seen == true && current_user.messages.where(read: nil, match_id: match.id).empty? ? "" : "border-color: red"}" %>
    <% else %>
      <img class="avatar-3" alt="avatar-bordered" src="https://images.unsplash.com/photo-1438761681033-6461ffad8d80?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1500&q=80", <%= style="#{match.local_seen == true && current_user.messages.where(read: nil, match_id: match.id).empty? ? "" : "border-color: red"}" %> />
    <% end %>
    <% end %>
<% end %>
