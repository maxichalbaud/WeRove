<div class="home-container">
  <h2 class="title" style="font-size: 18px;">What did you think of this recommendation?</h1>
    <p class="label-font">Your feedback helps us making this community better.</p>
<%= simple_form_for [@user, @recommendation, @review] do |f| %>
  <%= f.input :content, input_html: { class: 'form-control' }, label_html: { class: 'label-font' } %>
  <%= f.input :rating, collection: 1..5, selected: 1, input_html: { class: 'form-control' }, label_html: { class: 'label-font' } %>
  <%= f.button :submit, class: 'btn btn-primary' %>
<% end %>
</div>
